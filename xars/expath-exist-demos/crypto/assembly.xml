<package xmlns="http://expath.org/ns/pkg" name="${package-name}" abbrev="${package-abbrev}" version="${project.version}"
	spec="1.0">
	<title>${package-title}</title>
	<author id="cteodorescu">Claudius Teodorescu</author>
	<website>${project.url}</website>
	<license>GNU-LGPL</license>
	<copyright>true</copyright>
	<type>application</type>
	<status>stable</status>
	<target>expath-${project.artifactId}</target>
	<tag>${module-prefix}</tag>
	<tag>expath</tag>
	<tag>${package-type}</tag>
	<tag>exist</tag>
	<category id="libs">Libraries</category>
	<category id="exist">eXist extensions</category>
	<dependency processor="http://exist-db.org/" />
	<dependency package="http://expath.org/lib/crypto" />
	<fileSets>
		<fileSet>
			<directory>${basedir}</directory>
			<includes>
				<include>icon.png</include>
				<include>index.xml</include>
			</includes>
			<outputDirectory>/</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>..</directory>
			<includes>
				<include>controller.xql</include>
			</includes>
			<outputDirectory>/</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>..</directory>
			<includes>
				<include>test-plan.xql</include>
				<include>generate-tests-presentation.xsl</include>
			</includes>
			<outputDirectory>tests</outputDirectory>
		</fileSet>		
		<fileSet>
			<directory>${unit-tests-dir-path}/java/org/expath/exist/${project.artifactId}/xquery</directory>
			<includes>
				<include>*.*</include>
			</includes>
			<outputDirectory>tests/unit-tests</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${unit-tests-dir-path}/java/org/expath/exist/${project.artifactId}</directory>
			<includes>
				<include>test-plan.xml</include>
			</includes>
			<outputDirectory>tests</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${unit-tests-dir-path}/resources/org/expath/exist/${project.artifactId}</directory>
			<includes>
				<include>*.*</include>
			</includes>
			<outputDirectory>tests/resources</outputDirectory>
		</fileSet>		
	</fileSets>
</package>

